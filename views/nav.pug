include mixins/_modal

nav.nav.row
  .nav__logo
    a(href="/")
      img.logo(src="/images/logo.png", alt="logo" style="width: 35px;")
  .nav__user.row
    if user
      +modal()
      a.nav-i.log(href="/logout") Log Out
      a.nav-i.notifications.modal__open(href=`/api/${user.slug}/notifications`)
        .icon__notify
      a.nav-i(href=`/${user.slug}/likes`)
        .icon__heart
      a.nav-i(href=`/${user.slug}/upload`) 
        .icon__upload
      a.nav-i(href=`/${user.slug}`)
        .icon__account
    else 
      a.nav-i.log(href="/login") Log In 
