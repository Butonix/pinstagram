mixin suggestions(data = {})
  .box__content
      ul.contact-list.row
        each profile in data
          li.contact.row
            a.img(href=`/${profile.slug}`)
              img(src=h.avatar(profile), alt=`${profile.name}'s avatar`)
            .user-name.col  
              a(href=`/${profile.slug}`)= profile.username
              if profile.name
                span= profile.name
