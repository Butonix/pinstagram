mixin formPassword()
  form.form__account.col(action="/register" method="POST")
    input(type="password" name="password" placeholder="Old Password" required)
    input(type="password" name="npassword" placeholder="New Password" required)
    input(type="password" name="npassword" placeholder="New Password, again" required)
    input.button(type="submit" value="Change password")
