doctype html
html
  head
    title= `${title} | ${h.siteName}`
    link(rel="shortcut icon" type="image/ico" href="/images/instagram.ico")
    link(rel='stylesheet', href='/dist/style.css') 
    script(src="http://localhost:8080/public/dist/bundle.js")  
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body
    header
    main 
      nav.nav.row
        .nav__logo
          a(href="/") Logo
        .nav__user
          if user
            each i in h.menu
              a(href=`${i.url}`)= i.title
            a(href=`/${user.slug}/upload`) Add image  
            a(href=`/${user.slug}`) Account      
          else 
            a(href="/login") Log in  
      block content
